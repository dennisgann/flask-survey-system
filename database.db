CREATE TABLE USERS ( 
	user_ID INT PRIMARY KEY NOT NULL,
	USERNAME TEXT NOT NULL, 
	PASSWORD TEXT NOT NULL, 
	TYPE INT NOT NULL CHECK (TYPE > 0 && TYPE <= 3), 
)

CREATE TABLE QUESTIONS (
	question_ID INT PRIMARY KEY NOT NULL,
	QUESTION_TEXT TEXT NOT NULL,
	STATE INT NOT NULL CHECK (STATE == 0 || STATE == 1),
	TYPE INT NOT NULL,
	REQUIRED INT NOT NULL CHECK (REQUIRED == 0 || REQUIRED == 1),
	RESPONSES BLOB NOT NULL,
)

CREATE TABLE SURVEYS (
	survey_ID INT PRIMARY KEY NOT NULL,
	NAME TEXT NOT NULL, 
	COURSES TEXT NOT NULL,
	STATE INT NOT NULL,
	QUESTIONS BLOB NOT NULL,
)

CREATE TABLE RESPONSES (
	response_ID INT PRIMARY KEY NOT NULL,
	user_ID INT NOT NULL UNIQUE,
	FOREIGN KEY (user_ID) REFERENCES USERS (user_ID)
	survey_ID INT NOT NULL UNIQUE,
	FOREIGN KEY (survey_ID) REFERENCES SURVEYS (survey_ID)
	RESPONSES BLOB NOT NULL,
)

